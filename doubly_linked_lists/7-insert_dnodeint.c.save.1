#include "lists.h"

/**
**insert_dnodeint_at_index - inserer un noeud a l'emplacement de l'index
*
*@idx: position ou inserer le noeud
*
*
**/

dlistint_t *insert_dnodeint_at_index(dlistint_t **h, unsigned int idx, int n)
{
dlistint_t *n_noeud;
dlistint_t *tmp;
unsigned int i = 0;

n_noeud = malloc(sizeof(dlistint_t));
	if (n_noeud == NULL)
	{
	return (NULL);
	}
n_noeud->n = n;

	if (*h == NULL)
	{
	*h = n_noeud;
	n_noeud->prev = NULL;
	n_noeud->next = NULL;
	}
	tmp = *h;

		while (tmp->next != NULL)
		{
			if (i == (idx - 1))
			{

				n_noeud->next = tmp->next;
				n_noeud->prev = tmp;
			}
			else
			{
				tmp = tmp->next;

			}
			i++;
		}

	n_noeud->next = tmp;

return (n_noeud);
}
